<%- include('partials/header') %>

<div class="container" >

  <h2>Register library</h2>
  <form class="form-horizontal">
    <div class="form-group">
      <label class="control-label col-sm-2" for="libraryname">Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="libraryname" ng-model="libraryname" placeholder="Enter library name" name="libraryname">
      </div>
    </div>
   
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="button" ng-click = "regLibrary(this)" class="btn btn-default">Save</button>
      </div>
    </div>
  </form>
</div>

<h2>library list</h2>
<ul class="list-group" ng-repeat="library in librarObj ">
  <li class="list-group-item" ><a ng-click="click(library._id)">{{library.name}} || {{library.time * 1000 | date:'dd-MM-yy'}}</a></li>

</ul>
   <%- include('partials/footer') %>
