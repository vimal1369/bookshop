<%- include('partials/header') %>

<div class="container" >

  <h2>add books to library</h2>
  <form class="form-horizontal">
    <div class="form-group">
      <label class="control-label col-sm-2" for="bookname">Book Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="bookname" ng-model="bookname" placeholder="Enter book name" name="bookname">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="library">library:</label>
      <div class="col-sm-10">          
       <select name="library" ng-model="library" class="form-control">
	  
    <option ng-repeat="library in librarObj"
            value="{{library._id}}">
      {{library.name}}
    </option>
</select>
      </div>
    </div>
    <!---<div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label><input type="checkbox" name="remember"> Remember me</label>
        </div>
      </div>
    </div>-->
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="button" ng-click = "saveBook(this)" class="btn btn-default">Add</button>
      </div>
    </div>
  </form>
</div>

<h2>Book list</h2>
<ul class="list-group" ng-repeat="book in booksObj |orderBy:'time':true">
  <li class="list-group-item" ><a ng-click="click(book._id)">{{book.bookname}} || {{book.time * 1000 | date:'dd-MM-yy'}}</a></li>

</ul>
